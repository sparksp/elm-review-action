{
  "name": "elm-review-action",
  "version": "0.1.0",
  "description": "Use elm-review to check code quality",
  "main": "lib/main.js",
  "scripts": {
    "postinstall": "elm-tooling install",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "run-s build format lint pack test ;"
  },
  "homepage": "https://github.com/sparksp/elm-review-action#readme",
  "bugs": {
    "url": "https://github.com/sparksp/elm-review-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sparksp/elm-review-action.git"
  },
  "keywords": [
    "actions",
    "elm-review",
    "lint"
  ],
  "author": "Phill Sparks <me@phills.me.uk> (https://github.com/sparksp)",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "@octokit/action": "^3.5.5"
  },
  "devDependencies": {
    "@octokit/types": "^6.12.2",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "@vercel/ncc": "^0.27.0",
    "elm-review": "^2.4.6",
    "elm-tooling": "^1.3.0",
    "eslint": "^7.22.0",
    "eslint-plugin-github": "^4.1.2",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  }
}
